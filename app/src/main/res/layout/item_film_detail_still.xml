<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <variable
            name="bean"
            type="com.fun_play.app.datamanager.bean.watch.FilmDetailBean.ImageListBean" />
    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_image"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:imageWidthDp="@{140}"
            android:imageHeightDp="@{100}"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:imageUrl='@{bean.imgUrl}'
            app:riv_corner_radius_top_left="@dimen/dp_3"
            app:riv_corner_radius_top_right="@dimen/dp_3"
            app:riv_corner_radius_bottom_left="@dimen/dp_3"
            app:riv_corner_radius_bottom_right="@dimen/dp_3"/>

    </RelativeLayout>

</layout>