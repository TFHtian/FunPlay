<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <com.scwang.smartrefresh.header.MaterialHeader
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/actionBarSize" />
            <!--联动-->>
            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_page_bg">
                <android.support.design.widget.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
                    <android.support.design.widget.CollapsingToolbarLayout
                        android:id="@+id/collapsing_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorTheme">
                            <LinearLayout
                                android:gravity="center"
                                android:id="@+id/lin_search"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_30"
                                android:layout_marginTop="@dimen/dp_5"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_marginRight="@dimen/dp_15"
                                android:background="@drawable/study_search_layout_bg">
                                <ImageView
                                    android:layout_width="@dimen/dp_15"
                                    android:layout_height="@dimen/dp_15"
                                    android:src="@drawable/search_study"/>
                                <TextView
                                    style="@style/text_tab_style"
                                    android:text="@string/search"
                                    android:textSize="@dimen/text_14sp"
                                    android:textColor="@color/colorWhite"
                                    android:layout_marginLeft="@dimen/dp_10"/>
                            </LinearLayout>
                            <RelativeLayout
                                android:id="@+id/rl_banner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15">
                                <me.jingbin.sbanner.SBannerView
                                    android:id="@+id/banner"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/home_banner_height"
                                    app:indicator_height="@dimen/dp_8"
                                    app:indicator_margin="@dimen/dp_8"
                                    app:indicator_padding="@dimen/dp_2"
                                    app:indicator_width="@dimen/dp_8"
                                    app:is_back_loop="false"
                                    app:page_left_margin="@dimen/home_banner_margin"
                                    app:page_right_margin="@dimen/home_banner_margin"
                                    android:background="@color/colorTheme" />
                            </RelativeLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/study_home_content_layout_shape">
                                <include
                                    layout="@layout/study_home_category_layout"/>
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.design.widget.CollapsingToolbarLayout>
                </android.support.design.widget.AppBarLayout>
                <!--底部吸附与列表-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <com.flyco.tablayout.SlidingTabLayout
                        android:id="@+id/order_tab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/study_tab_layout_bg"
                        android:minHeight="@dimen/dp_45"
                        android:minWidth="@dimen/dp_50"
                        android:paddingTop="@dimen/dp_10"
                        app:tl_indicator_margin_bottom="@dimen/dp_10"
                        app:tl_textsize="@dimen/text_14sp"
                        tl:tl_indicator_color="@color/colorTheme"
                        tl:tl_textSelectColor="@color/colorTheme"
                        tl:tl_textUnselectColor="@color/textDarkGrayColor"
                        tl:tl_underline_height="@dimen/dp_2"
                        app:tl_indicator_width_equal_title="true"
                        app:tl_textBold="SELECT"/>
                    <android.support.v4.view.ViewPager
                        android:id="@+id/view_page_order"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
                            android:id="@+id/recycler_gank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorWhite"/>
                        <LinearLayout
                            android:visibility="gone"
                            android:orientation="vertical"
                            android:id="@+id/ll_list_loading"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_20">
                                <ImageView
                                    android:id="@+id/iv_list_loading"
                                    android:layout_width="@dimen/dp_40"
                                    android:layout_height="@dimen/dp_20"
                                    android:drawablePadding="@dimen/dp_5"/>
                                <TextView
                                    style="@style/text_tab_style"
                                    android:textSize="@dimen/text_14sp"
                                    android:layout_marginLeft="@dimen/dp_10"
                                    android:text="@string/loading"/>
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.design.widget.CoordinatorLayout>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        <LinearLayout
            android:id="@+id/ll_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="90dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_loading"
                android:padding="@dimen/dp_10"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_100" />
        </LinearLayout>

    </RelativeLayout>

</layout>